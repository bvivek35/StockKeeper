<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.vb.stockkeeper.activity.MainActivity">
    <fragment
        android:name="com.vb.stockkeeper.activity.search.fragment.SearchFragment"
        android:id="@+id/search_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/fav_symbols"
        android:name="com.vb.stockkeeper.activity.search.fragment.FavSymbolsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:layout="@layout/fragment_fav_symbols" />
</LinearLayout>
