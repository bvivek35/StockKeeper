<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fav_item_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="symbol"
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fav_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fav_item_symbol"
        android:layout_alignBottom="@+id/fav_item_symbol"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/fav_item_symbol"
        android:text="price"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fav_item_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fav_item_price"
        android:layout_alignBottom="@+id/fav_item_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:text="change"
        android:textSize="15sp" />
</RelativeLayout>